#!/usr/bin/env bash
DESTDIR=""
ORIGDIR="/usr/share/asistente-actualizacion"

    mkdir -p ${DESTDIR}/etc/skel/Escritorio/
    mkdir -p ${DESTDIR}/etc/skel/.config/autostart/
    mkdir -p ${DESTDIR}/usr/share/applications/
    mkdir -p ${DESTDIR}/etc/xdg/autostart/

    cp ${ORIGDIR}/principal.py ${DESTDIR}/usr/share/asistente-actualizacion2/
    echo "cp ${ORIGDIR}/asistente-actualizacion2.desktop ${DESTDIR}/etc/xdg/autostart/"
    cp ${ORIGDIR}/asistente-actualizacion2.desktop ${DESTDIR}/etc/xdg/autostart/
    cp ${ORIGDIR}/paso.conf ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/gui.glade ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/asistente.png ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/initasist ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/finasist ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/preferences.canaima ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/preferences ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/sources.list ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/sources.list.canaima ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/acciones ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/selections.conf ${DESTDIR}/usr/share/asistente-actualizacion2/
    cp ${ORIGDIR}/acciones ${DESTDIR}/usr/bin/asistente-actualizacion2
    cp ${ORIGDIR}/limpiarkernels ${DESTDIR}/usr/bin/limpiarkernels
    chmod +x ${DESTDIR}/usr/bin/asistente-actualizacion2
    chmod +x ${DESTDIR}/usr/bin/limpiarkernels
    chmod +x ${DESTDIR}/usr/share/asistente-actualizacion2/initasist
    chmod +x ${DESTDIR}/usr/share/asistente-actualizacion2/finasist

